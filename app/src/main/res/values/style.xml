<?xml version="1.0" encoding="utf-8"?>

<!--Styles used in the layouts defined-->

<resources>
    <style name="Title01Style">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/gothamssm_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="Title02Style">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/gothamssm_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Title03Style">
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/gothamssm_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Body_HintStyle">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="InputStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/gothamssm_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="SubtitleStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="DetailStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/gothamssm_book</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="border" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>
    <style name="bigBorder" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>
    <style name="imageMargin" >
        <item name="android:layout_margin">@dimen/layout_margin</item>
    </style>
</resources>