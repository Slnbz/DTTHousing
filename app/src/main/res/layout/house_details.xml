<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:layout_margin="8dp">


    <ScrollView
        android:id="@+id/scrollviewdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/scrollviewdetails">

            <ImageView
                android:id="@+id/detailimage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/relativelayouticons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/detailimage"
                app:layout_constraintTop_toBottomOf="@+id/zip">

                <TextView
                    android:id="@+id/detailprice"
                    style="@style/Title01Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/bed_image"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="$45,000" />

                <ImageView
                    android:id="@+id/bed_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/detailamountofbed"
                    android:contentDescription="@string/bed"
                    app:srcCompat="@drawable/ic_bed" />

                <TextView
                    android:id="@+id/detailamountofbed"
                    style="@style/DetailStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/bath_image"
                    android:fontFamily="@font/gothamssm_book"
                    android:text="@string/amount_of_bed" />

                <ImageView
                    android:id="@+id/bath_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/detailamountofbath"
                    android:contentDescription="@string/bath"
                    app:srcCompat="@drawable/ic_bath" />

                <TextView
                    android:id="@+id/detailamountofbath"
                    style="@style/DetailStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/layer_image"
                    android:layout_centerVertical="true"
                    android:text="@string/amount_of_bath" />

                <ImageView
                    android:id="@+id/layer_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/detailfloorarea"
                    android:contentDescription="@string/floor"
                    app:srcCompat="@drawable/ic_layers" />

                <TextView
                    android:id="@+id/detailfloorarea"
                    style="@style/DetailStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/location_image"
                    android:text="@string/floor_m2" />

                <ImageView
                    android:id="@+id/location_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/detaillocationdistance"
                    android:contentDescription="@string/location"
                    app:srcCompat="@drawable/ic_location" />

                <TextView
                    android:id="@+id/detaillocationdistance"
                    style="@style/DetailStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/distance" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView2"
                style="@style/Title02Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                android:id="@+id/createdDate"
                style="@style/Body_HintStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detailsdescription"
                style="@style/Body_HintStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textView4"
                style="@style/Title02Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location" />

            <TextView
                android:id="@+id/longitudedetail"
                style="@style/Body_HintStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/latitudedetail"
                style="@style/Body_HintStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>